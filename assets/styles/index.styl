*,
*::before,
*::after
  box-sizing border-box
  margin 0
  font-family sans-serif

ul
  list-style none
  padding 0

img,
video {
  height: 100%;
  max-width: 100%;
}

html,
body,
#__nuxt
  height 100%
  margin 0
  padding 0
  background-color #121212
  color #f3f3f3

// helpers

.full-width {
  width: 100% !important;
  max-width: none !important;
}
